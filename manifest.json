{
  "manifest_version": 3,
  "name": "Copy YouTube Info",
  "version": "1.0",
  "description": "Copy video info from YouTube with one click.",
  "permissions": ["scripting", "activeTab", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}